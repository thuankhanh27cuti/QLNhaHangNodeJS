<html lang="en">
<head>
    <title>Login</title>
    <!-- Add the Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- FontAwesome for eye icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.0/dist/sweetalert2.min.css">
    <style>
        /* Custom CSS for the login page */
        body {
            background: linear-gradient(to right, #3498db, #8e44ad);
            font-family: 'Arial', sans-serif;
            color: #fff;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: #2980b9;
            color: white;
            font-size: 24px;
        }

        .card-body {
            background: #ecf0f1;
            color: #2c3e50;
        }

        .btn-primary {
            background-color: #3498db;
            border: none;
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            background-color: #2980b9;
        }

        .btn-secondary,
        .btn-danger,
        .btn-success {
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 16px;
            margin-top: 10px;
            transition: all 0.3s;
        }

        .btn-secondary:hover {
            background-color: #95a5a6;
        }

        .btn-danger:hover {
            background-color: #e74c3c;
        }

        .btn-success:hover {
            background-color: #27ae60;
        }

        .form-control {
            border-radius: 30px;
            font-size: 16px;
            padding: 10px 20px;
        }

        .input-group-append span {
            cursor: pointer;
        }

        .input-group-append .fa-eye,
        .input-group-append .fa-eye-slash {
            font-size: 18px;
            color: #2c3e50;
        }

        .text-right a {
            color: #2980b9;
        }

        .text-right a:hover {
            text-decoration: underline;
        }

        .mt-2 {
            margin-top: 10px;
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Quên mật khẩu</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/forgot-password">
                        <div class="form-group">
                            <label for="email">Địa chỉ email:</label>
                            <input type="email" class="form-control" id="email" name="email" required="">
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Gửi mã OTP</button>
                        <a href="/login" class="btn btn-primary w-100 mt-2">Đăng nhập</a>
                        <a href="/sign-up" class="btn btn-secondary w-100 mt-2">Đăng ký</a>
                        <a href="/" class="btn btn-success w-100 mt-2">Trang chủ</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add the Bootstrap JavaScript and jQuery (optional but required for some Bootstrap features) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.0/dist/sweetalert2.min.js"></script>

</body>
</html>