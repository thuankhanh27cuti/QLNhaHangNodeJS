<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>Nhà hàng</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <meta content="" name="keywords"/>
    <meta content="" name="description"/>

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon"/>
    <%- include('../partials/user/css-libraries') %>
</head>
<body>
<div class="container-fluid bg-white position-relative p-0">
    <%- include('../partials/user/navbar') %>
    <!-- Menu Start -->
    <section id="menu" style="padding: 60px 0;">
        <div class="container">
            <div class="text-center my-3">
                <h2 class="section-title wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">Blog</h2>
            </div>
            <div>
                <% data.forEach((row) => { %>
                <a href="/blog-info?id=<%= row.MaSP %>" class="d-flex align-items-center text-black mb-2">
                    <img style="width: 120px; height: 80px; object-fit: cover" src="/img/<%= row.blog_image_url %>" alt="">
                    <div class="px-2">
                        <p class="fw-bold mb-0"><%= row.blog_tieu_de %></p>
                        <p class="mb-0"><%= row.blog_tom_tat %></p>
                        <p class="mb-0">Ngày viết blog: <%= row.blog_uploaded_at.toLocaleString() %></p>
                    </div>
                </a>
                <% }) %>
            </div>
        </div>
    </section>
    <%- include('../partials/user/footer') %>
</div>
<%- include('../partials/user/js-libraries') %>
<%- include('../partials/user/ai-chat') %>
</body>
</html>