<html lang="en">

<head>
    <title>Login</title>
    <!-- Add the Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- FontAwesome for eye icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.0/dist/sweetalert2.min.css">
    <%- include('../../partials/user/css-libraries') %>
 
    <style>
        /* Custom CSS for the login page */
        .d-flex.align-items-center img {
                transition: transform 0.3s ease;
            }

            .d-flex.align-items-center:hover img {
                transform: scale(1.8);
            }
        .card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: #2980b9;
            color: white;
            font-size: 24px;
        }

        .card-body {
            background: #ecf0f1;
            color: #2c3e50;
        }

        .btn-primary {
            background-color: #3498db;
            border: none;
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            background-color: #2980b9;
        }

        .btn-secondary,
        .btn-danger,
        .btn-success {
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 16px;
            margin-top: 10px;
            transition: all 0.3s;
        }

        .btn-secondary:hover {
            background-color: #95a5a6;
        }

        .btn-danger:hover {
            background-color: #e74c3c;
        }

        .btn-success:hover {
            background-color: #27ae60;
        }

        .form-control {
            border-radius: 30px;
            font-size: 16px;
            padding: 10px 20px;
        }

        .input-group-append span {
            cursor: pointer;
        }

        .input-group-append .fa-eye,
        .input-group-append .fa-eye-slash {
            font-size: 18px;
            color: #2c3e50;
        }

        .text-right a {
            color: #2980b9;
        }

        .text-right a:hover {
            text-decoration: underline;
        }

        .mt-2 {
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container-fluid position-relative p-0">
        <%- include('../../partials/user/navbar') %>
            <div class="container mt-5", style="padding-top: 15px;padding-bottom: 15px;">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header text-center">
                                <h2 style="color: white;">Đổi mật khẩu</h2>
                            </div>
                            <% if (session && session.error) { %>
                                <div class="alert alert-danger">
                                    <%= session.error %>
                                </div>
                                <% delete session.error; %> <!-- Xóa thông báo sau khi hiển thị -->
                                    <% } %>
                                        <div class="card-body">
                                            <form method="POST" action="/thong-tin-nguoi-dung/doi-mat-khau">
                                                <div class="form-group">
                                                    <label for="email">Địa chỉ email:</label>
                                                    <input type="email" class="form-control" id="email" name="email"
                                                        required="">
                                                </div>
                                                <button type="submit" class="btn btn-danger w-100">Gửi mã OTP</button>

                                            </form>
                                        </div>
                        </div>
                    </div>
                </div>
            </div>
        <%- include('../../partials/user/footer') %>
    </div>
</body>
<!-- Add the Bootstrap JavaScript and jQuery (optional but required for some Bootstrap features) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.0/dist/sweetalert2.min.js"></script>

</body>

</html>