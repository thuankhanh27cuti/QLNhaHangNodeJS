<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashtreme Admin</title>
    <link rel="icon" href="/admin/assets/images/favicon.ico" type="image/x-icon">
    <%- include('../../partials/admin/css-libraries') %>
</head>
<body class="bg-theme bg-theme1">
<div id="wrapper">
    <%- include('../../partials/admin/navigation') %>
    <%- include('../../partials/admin/header') %>
    <div class="clearfix">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mã giảm giá</h5>
                        <a href="/admin/add/giam-gia" class="btn" style="background-color: aliceblue; margin-bottom: 10px;" type="button">Thêm</a>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th scope="col">Giảm giá</th>
                                    <th scope="col">Mã giảm giá</th>
                                    <th scope="col">Sửa/Xóa</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% data.forEach((row) => { %>
                                <tr>
                                    <th scope="row"><%= row.MaGiamGia %></th>
                                    <td><%= row.GiamGia %>%</td>
                                    <td>
                                        <a href="/admin/update/giam-gia?id=<%= row.MaGiamGia %>" id="btnUpdate" class="btn btn-primary">Sửa</a>
                                        <a href="/admin/delete/giam-gia?id=<%= row.MaGiamGia %>" id="btnDelete" class="btn btn-danger">Xóa</a>
                                    </td>
                                </tr>
                                <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <%
                        for (let i = 0; i < pages; i++) {
                        %>
                            <a href="?page=<%= i + 1 %>" class="btn btn-primary" style="color:white;"><%= i + 1 %></a>
                        <%
                        }
                        %>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="back-to-top"><i class="fa fa-angle-double-up"></i></a>
    </div>
    <%- include('../../partials/admin/footer') %>
    <%- include('../../partials/admin/right-sidebar') %>
    <%- include('../../partials/admin/js-libraries') %>
</div>
</body>
</html>