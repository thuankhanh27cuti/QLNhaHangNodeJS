<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashtreme Admin</title>
    <link rel="icon" href="/admin/assets/images/favicon.ico" type="image/x-icon">
    <%- include('../../partials/admin/css-libraries') %>
</head>
<body class="bg-theme bg-theme1">
<div id="wrapper">
    <%- include('../../partials/admin/navigation') %>
    <%- include('../../partials/admin/header') %>
    <div class="clearfix">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Nguyên liệu</h5>
                        <a href="/admin/add/nguyen-lieu" class="btn btn-light btn-round px-5" type="submit">Thêm</a>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th scope="col">Mã Nguyên Liệu</th>
                                    <th scope="col">Tên Nguyên Liệu</th>
                                    <th scope="col">Đơn giá nhập</th>
                                    <th scope="col">Số lượng còn</th>
                                    <th scope="col">Sửa/Xóa</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% data.forEach((row) => { %>
                                <tr>
                                    <th scope="col"><%= row.MaNL %></th>
                                    <th scope="col"><%= row.TenNL %></th>
                                    <th scope="col"><%= parseInt(row.DonGiaNhap).toLocaleString() %> đồng</th>
                                    <th scope="col"><%= row.SoLuongCon %></th>
                                    <th scope="col">
                                        <a class="btn btn-primary" href="/admin/update/nguyen-lieu?id=<%= row.MaNL %>" type="button">Sửa</a>
                                        <a class="btn btn-danger" href="/admin/delete/nguyen-lieu?id=<%= row.MaNL %>">Xóa</a>
                                        <a class="btn btn-warning" href="/admin/update/so-luong-nguyen-lieu?id=<%= row.MaNL %>">Nhập thêm</a>
                                    </th>
                                </tr>
                                <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <%
                        for (let i = 0; i < pages; i++) {
                        %>
                            <a href="?page=<%= i + 1 %>" class="btn btn-primary" style="color:white;"><%= i + 1 %></a>
                        <%
                        }
                        %>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="back-to-top"><i class="fa fa-angle-double-up"></i></a>
    </div>
    <%- include('../../partials/admin/footer') %>
    <%- include('../../partials/admin/right-sidebar') %>
    <%- include('../../partials/admin/js-libraries') %>
</div>
</body>
</html>