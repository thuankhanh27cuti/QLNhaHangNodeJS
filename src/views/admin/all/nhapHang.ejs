<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashtreme Admin</title>
    <link rel="icon" href="/admin/assets/images/favicon.ico" type="image/x-icon">
    <%- include('../../partials/admin/css-libraries') %>
</head>
<body class="bg-theme bg-theme1">
<div id="wrapper">
    <%- include('../../partials/admin/navigation') %>
    <%- include('../../partials/admin/header') %>
    <div class="clearfix">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Chi tiết hóa đơn nhập</h5>
                        <form method="GET" class="mb-2">
                            <div class="d-flex align-items-end">
                                <div class="mr-2">
                                    <label for="tungay">Từ ngày</label>
                                    <input class="form-control w-auto" type="date" name="tungay" id="tungay" value="<%= tungay %>" required>
                                </div>
                                <div class="mr-2">
                                    <label for="denngay">Đến ngày</label>
                                    <input class="form-control w-auto" type="date" name="denngay" id="denngay" value="<%= denngay %>" required>
                                </div>
                                <div class="mr-2">
                                    <button type="submit" class="btn btn-primary">Xuất Dữ Liệu</button>
                                </div>
                            </div>
                        </form>
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th scope="col">Mã Hóa Đơn</th>
                                <th scope="col">Người Nhập</th>
                                <th scope="col">Ngày nhập</th>
                                <th scope="col">Tổng tiền hóa dơn</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% data.forEach((row) => { %>
                            <tr>
                                <td><%= row.MaHoaDonNhap %></td>
                                <td><%= row.NgayNhapHang.toLocaleString() %></td>
                                <td><%= ((row.Ho ? row.Ho : "") + " " + (row.Ten ? row.Ten: "")).trim() %></td>
                                <td><%= parseInt(row.tongTien).toLocaleString("en-US") %> đồng</td>
                            </tr>
                            <% }) %>
                            <tr>
                                <th colspan="3">Tổng tiền Nhập hàng :</th>
                                <td><%= parseInt(total).toLocaleString("en-US") %> đồng</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="back-to-top"><i class="fa fa-angle-double-up"></i></a>
    </div>
    <%- include('../../partials/admin/footer') %>
    <%- include('../../partials/admin/right-sidebar') %>
    <%- include('../../partials/admin/js-libraries') %>
</div>
</body>
</html>