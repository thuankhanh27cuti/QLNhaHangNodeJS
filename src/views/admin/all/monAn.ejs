<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashtreme Admin</title>
    <link rel="icon" href="/admin/assets/images/favicon.ico" type="image/x-icon">
    <%- include('../../partials/admin/css-libraries') %>
</head>
<body class="bg-theme bg-theme1">
<div id="wrapper">
    <%- include('../../partials/admin/navigation') %>
    <%- include('../../partials/admin/header') %>
    <div class="clearfix">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <p class="h4 mb-2">Danh sách món ăn</p>
                        <a href="/admin/add/mon-an" class="btn" style="background-color: aliceblue; margin-bottom: 10px;" type="button">Thêm</a>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th scope="col">Mã Món Ăn</th>
                                    <th scope="col">Tên Loại</th>
                                    <th scope="col">Tên Món</th>
                                    <th scope="col">Giá Bán</th>
                                    <th scope="col">Giới Thiệu Sản Phẩm</th>
                                    <th scope="col">Bài viết</th>
                                    <th scope="col">Sửa/Xóa</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% data.forEach((row) => { %>
                                <tr>
                                    <th scope="col"><%= row.MaSP %></th>
                                    <th scope="col"><%= row.TenLoai %></th>
                                    <th scope="col"><%= row.TenSP %></th>
                                    <th scope="col"><%= parseInt(row.GiaBan).toLocaleString() %> đồng</th>
                                    <th scope="col"><%= row.GioiThieuSP %></th>
                                    <th scope="col">
                                        <a href="/admin/update/bai-viet?id=<%= row.MaSP %>">Quản lý bài viết</a>
                                    </th>
                                    <th scope="col">
                                        <a class="btn btn-primary" href="/admin/update/mon-an?id=<%= row.MaSP %>" type="button">Sửa</a>
                                        <a class="btn btn-danger" href="/admin/delete/mon-an?id=<%= row.MaSP %>">Xóa</a>
                                    </th>
                                </tr>
                                <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <%
                        for (let i = 0; i < pages; i++) {
                        %>
                            <a href="?page=<%= i + 1 %>" class="btn btn-primary" style="color:white;"><%= i + 1 %></a>
                        <%
                        }
                        %>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="back-to-top"><i class="fa fa-angle-double-up"></i></a>
    </div>
    <%- include('../../partials/admin/footer') %>
    <%- include('../../partials/admin/right-sidebar') %>
    <%- include('../../partials/admin/js-libraries') %>
</div>
</body>
</html>