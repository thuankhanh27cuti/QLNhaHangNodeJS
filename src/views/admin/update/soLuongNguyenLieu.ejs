<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashtreme Admin</title>
    <link rel="icon" href="/admin/assets/images/favicon.ico" type="image/x-icon">
    <%- include('../../partials/admin/css-libraries') %>
</head>
<body class="bg-theme bg-theme1">
<div id="wrapper">
    <%- include('../../partials/admin/navigation') %>
    <%- include('../../partials/admin/header') %>
    <div class="clearfix">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <form method="POST" action="/admin/update/so-luong-nguyen-lieu">
                            <div class="form-group">
                                <label for="maNL">Mã Nguyên Liệu</label>
                                <input id="maNL" type="number" name="maNL" class="form-control" value="<%= data.MaNL %>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="ten">Tên Nguyên Liệu</label>
                                <input id="ten" type="text" class="form-control" value="<%= data.TenNL %>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="donGia">Đơn giá nhập</label>
                                <input id="donGia" type="number" class="form-control" value="<%= data.DonGiaNhap %>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="soLuong">Số lượng còn lại</label>
                                <input id="soLuong" type="number" class="form-control" value="<%= data.SoLuongCon %>" readonly>
                            </div>
                            <div class="form-group">
                                <label for="NCC">Nhà Cung Cấp</label>
                                <select name="NCC" id="NCC" class="form-control" required>
                                    <% nhaCungCap.forEach((row) => { %>
                                    <option value="<%= row.MaNCC %>"><%= row.TenNCC %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="nhapThem">Số Lượng Nhập Thêm</label>
                                <input id="nhapThem" type="number" name="nhapThem" class="form-control" min="0" value="0" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Sửa</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="back-to-top"><i class="fa fa-angle-double-up"></i></a>
    </div>
    <%- include('../../partials/admin/footer') %>
    <%- include('../../partials/admin/right-sidebar') %>
    <%- include('../../partials/admin/js-libraries') %>
</div>
</body>
</html>