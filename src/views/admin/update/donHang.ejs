<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashtreme Admin</title>
    <link rel="icon" href="/admin/assets/images/favicon.ico" type="image/x-icon">
    <%- include('../../partials/admin/css-libraries') %>
</head>
<body class="bg-theme bg-theme1">
<div id="wrapper">
    <%- include('../../partials/admin/navigation') %>
    <%- include('../../partials/admin/header') %>
    <div class="clearfix">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
                        <form method="POST" action="/admin/update/don-hang">
                            <div class="form-group">
                                <label for="id">Mã hoá đơn</label>
                                <input readonly name="id" value="<%= data.MaHoaDon %>" type="number" class="form-control form-control-rounded" id="id">
                            </div>
                            <div class="form-group">
                                <label for="ngayLap">Ngày lập</label>
                                <input value="<%= data.NgayLap %>" type="datetime-local" class="form-control form-control-rounded" id="ngayLap" readonly>
                            </div>
                            <div class="form-group">
                                <label for="Username">Username</label>
                                <input readonly value="<%= data.UserName %>" type="text" class="form-control form-control-rounded" id="Username">
                            </div>
                            <div class="form-group">
                                <label for="giamGia">Giảm giá</label>
                                <input readonly value="<%= data.GiamGia ? data.GiamGia : 0 %>%" type="text" class="form-control form-control-rounded" id="giamGia">
                            </div>
                            <div class="form-group">
                                <label for="phuongThucTT">Phương thức thanh toán</label>
                                <select disabled class="form-control form-control-rounded" id="phuongThucTT">
                                    <option value="0"<%= data.PhuongThucTT === 0 ? " selected": "" %>>Thanh toán bằng tiền mặt</option>
                                    <option value="1"<%= data.PhuongThucTT === 1 ? " selected": "" %>>Thanh toán bằng tài khoản ngân hàng</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="ghiChu">Ghi chú</label>
                                <input readonly value="<%= data.GhiChu %>" type="text" class="form-control form-control-rounded" id="ghiChu">
                            </div>
                            <div class="form-group">
                                <label for="trangThai">Trạng thái</label>
                                <select<%= [1, 2].includes(data.trangthai) ? " disabled": "" %> name="trangThai" class="form-control form-control-rounded" id="trangThai">
                                    <option value="0"<%= data.trangthai === 0 ? " selected": "" %>>Chờ xác nhận</option>
                                    <option value="1"<%= data.trangthai === 1 ? " selected": "" %>>Đã xác nhận</option>
                                    <option value="2"<%= data.trangthai === 2 ? " selected": "" %>>Đã huỷ</option>
                                </select>
                            </div>
                            <% if (data.trangthai === 0) { %>
                            <div class="form-group">
                                <button type="submit" class="btn btn-light btn-round px-5">Sửa</button>
                            </div>
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="back-to-top"><i class="fa fa-angle-double-up"></i></a>
    </div>
    <%- include('../../partials/admin/footer') %>
    <%- include('../../partials/admin/right-sidebar') %>
    <%- include('../../partials/admin/js-libraries') %>
</div>
</body>
</html>